<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_1sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_10sdp">
        <RelativeLayout
            android:background="@color/black"
            android:id="@+id/rlItemCategory"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_itemcategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp" />

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_video"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_below="@+id/rl1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/item_category"
                    android:id="@+id/tvtitle_itemcategory"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_200sdp"
                    android:text="aaa"
                    android:id="@+id/tvdatecreated_itemcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
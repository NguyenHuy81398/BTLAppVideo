<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:id="@+id/rlvideocategory"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="@dimen/_85sdp">

    <RelativeLayout
        android:id="@+id/phancach"
        android:layout_alignParentLeft="true"
        android:background="@color/red"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_toRightOf="@+id/phancach"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgvideocategory"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_85sdp" />

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_video"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/tvtitlevideocategory"
                android:text="@string/item_category"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/_8sdp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:id="@+id/tvdatevideocategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>